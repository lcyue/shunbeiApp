<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wallet_guide_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:clickable="false"
            android:src="@mipmap/icon_left_white"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/statement"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:clickable="false"
            android:text="@string/positive"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:visibility="invisible" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/year_btton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableBottom="@drawable/rounded_rectangle_select"
                    android:drawablePadding="18dp"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:text="@string/year"
                    android:textColor="@color/black_word"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/moth_btton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:drawableBottom="@drawable/rounded_rectangle_select"
                    android:drawablePadding="18dp"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:text="@string/month"
                    android:textColor="@color/green"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/week_btton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableBottom="@drawable/rounded_rectangle_select"
                    android:drawablePadding="18dp"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:text="@string/week"
                    android:textColor="@color/black_word"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/day_btton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableBottom="@drawable/rounded_rectangle_select"
                    android:drawablePadding="18dp"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:text="@string/day"
                    android:textColor="@color/black_word"
                    android:textSize="18sp" />
            </RadioGroup>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/icon_colourful_oval" />

                <TextView
                    android:id="@+id/total_expenditure_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="45dp"
                    android:text="@string/total_expenditure"
                    android:textColor="@color/green"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/total_expenditure_context_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/total_expenditure_text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:text="4918.2"
                    android:textColor="@color/green"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <!--转换-->
                <ImageView
                    android:id="@+id/transform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_arrow"
                    android:layout_marginTop="30dp"
                    android:layout_below="@id/total_expenditure_context_text"
                    android:layout_centerHorizontal="true"
                    android:padding="10dp"/>
            </RelativeLayout>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/total_listview"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/icon_clothes"
                    android:gravity="center"
                    android:text="@string/clothes"
                    android:textColor="@color/black_word"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="346.00"
                    android:textColor="@color/black_word"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="7.04%"
                    android:textColor="@color/black_word"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/icon_eat_and_drimk"
                    android:gravity="center"
                    android:text="@string/eating_and_drinking"
                    android:textColor="@color/black_word"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1346.00"
                    android:textColor="@color/black_word"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="27.37%"
                    android:textColor="@color/black_word"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
