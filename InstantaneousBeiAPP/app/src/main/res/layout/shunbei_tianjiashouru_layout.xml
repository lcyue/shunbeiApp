<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">
            <!--导航栏-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="编辑分类"
                    android:textSize="18sp"
                    android:textColor="@color/green_nomal"
                    android:drawableLeft="@mipmap/back"
                    android:gravity="center_vertical"
                    android:drawablePadding="5dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加收入类别"
                    android:textSize="24sp"
                    android:textColor="#646464"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确定"
                    android:textSize="18sp"
                    android:textColor="@color/green_nomal"
                    android:gravity="center_vertical"
                    android:drawablePadding="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_view"/>
            <!--选择栏-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自定义输入名称"
                android:textSize="24sp"
                android:textColor="#646464"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:drawableLeft="@mipmap/packet_1"
                android:gravity="center_vertical"
                android:drawablePadding="15dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_view"/>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="6"
                android:columnCount="5"
                android:paddingTop="10dp"
                android:paddingBottom="25dp">
                <ImageView
                    android:layout_columnWeight="1"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:gravity="center_horizontal"
                    android:src="@mipmap/salary"/>
                <ImageView
                    android:layout_columnWeight="1"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:text="@string/job"
                    android:textSize="20sp"
                    android:textColor="@color/black_nomal"
                    android:gravity="center_horizontal"
                    android:src="@mipmap/job"/>
                <ImageView
                    android:layout_columnWeight="1"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:text="@string/redpacket"
                    android:textSize="20sp"
                    android:textColor="@color/black_nomal"
                    android:gravity="center_horizontal"
                    android:src="@mipmap/red_packet"/>
                <ImageView
                    android:layout_columnWeight="1"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:text="@string/alimony"
                    android:textSize="20sp"
                    android:textColor="@color/black_nomal"
                    android:gravity="center_horizontal"
                    android:src="@mipmap/alimony"/>
                <ImageView
                    android:layout_columnWeight="1"
                    android:layout_row="0"
                    android:layout_column="4"
                    android:text="@string/pin"
                    android:textSize="20sp"
                    android:textColor="@color/black_nomal"
                    android:gravity="center_horizontal"
                    android:src="@mipmap/pin"/>
                <ImageView
                    android:layout_columnWeight="1"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:src="@mipmap/investment"/>
                <ImageView
                    android:layout_columnWeight="1"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:src="@mipmap/bonus"/>
                <ImageView
                    android:layout_columnWeight="1"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:src="@mipmap/apply"/>
                <ImageView
                    android:layout_columnWeight="1"
                    android:layout_row="1"
                    android:layout_column="3"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:src="@mipmap/cash"/>
                <ImageView
                    android:layout_columnWeight="1"
                    android:layout_row="1"
                    android:layout_column="4"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:src="@mipmap/refund"/>
                <ImageView
                    android:layout_columnWeight="1"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:text="@string/alipay"
                    android:src="@mipmap/alipay"
                    android:layout_marginBottom="25dp"/>
                <ImageView
                    android:layout_columnWeight="1"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:gravity="center_horizontal"
                    android:src="@mipmap/rest"
                    android:layout_marginBottom="25dp"/>
                <ImageView
                    android:layout_columnWeight="1"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:gravity="center_horizontal"
                    android:src="@mipmap/compile"
                    android:layout_marginBottom="25dp"/>
                <ImageView
                    android:layout_columnWeight="1"
                    android:layout_row="2"
                    android:layout_column="3"
                    android:gravity="center_horizontal"
                    android:src="@mipmap/tiaffc"
                    android:layout_marginBottom="25dp"/>
                <ImageView
                    android:layout_columnWeight="1"
                    android:layout_row="2"
                    android:layout_column="4"
                    android:gravity="center_horizontal"
                    android:src="@mipmap/a9"
                    android:layout_marginBottom="25dp"/>
                <ImageView
                    android:layout_columnWeight="1"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:gravity="center_horizontal"
                    android:src="@mipmap/a10"
                    android:layout_marginBottom="25dp"/>
                <ImageView
                    android:layout_columnWeight="1"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:gravity="center_horizontal"
                    android:src="@mipmap/a11"
                    android:layout_marginBottom="25dp"/>
                <ImageView
                    android:layout_columnWeight="1"
                    android:layout_row="3"
                    android:layout_column="2"
                    android:gravity="center_horizontal"
                    android:src="@mipmap/a12"
                    android:layout_marginBottom="25dp"/>
                <ImageView
                    android:layout_columnWeight="1"
                    android:layout_row="3"
                    android:layout_column="3"
                    android:gravity="center_horizontal"
                    android:src="@mipmap/a13"
                    android:layout_marginBottom="25dp"/>
                <ImageView
                    android:layout_columnWeight="1"
                    android:layout_row="3"
                    android:layout_column="4"
                    android:gravity="center_horizontal"
                    android:src="@mipmap/a14"
                    android:layout_marginBottom="25dp"/>
                <ImageView
                    android:layout_columnWeight="1"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:gravity="center_horizontal"
                    android:src="@mipmap/a15"
                    android:layout_marginBottom="25dp"/>
                <ImageView
                    android:layout_columnWeight="1"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:gravity="center_horizontal"
                    android:src="@mipmap/a16"
                    android:layout_marginBottom="25dp"/>
                <ImageView
                    android:layout_columnWeight="1"
                    android:layout_row="4"
                    android:layout_column="2"
                    android:gravity="center_horizontal"
                    android:src="@mipmap/a17"
                    android:layout_marginBottom="25dp"/>
                <ImageView
                    android:layout_columnWeight="1"
                    android:layout_row="4"
                    android:layout_column="3"
                    android:gravity="center_horizontal"
                    android:src="@mipmap/a18"
                    android:layout_marginBottom="25dp"/>
                <ImageView
                    android:layout_columnWeight="1"
                    android:layout_row="4"
                    android:layout_column="4"
                    android:gravity="center_horizontal"
                    android:src="@mipmap/a19"
                    android:layout_marginBottom="25dp"/>
                <ImageView
                    android:layout_columnWeight="1"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:gravity="center_horizontal"
                    android:src="@mipmap/a20"
                    android:layout_marginBottom="25dp"/>
                <ImageView
                    android:layout_columnWeight="1"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:gravity="center_horizontal"
                    android:src="@mipmap/a20"
                    android:layout_marginBottom="25dp"/>
                <ImageView
                    android:layout_columnWeight="1"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:gravity="center_horizontal"
                    android:src="@mipmap/a21"
                    android:layout_marginBottom="25dp"/>
                <ImageView
                    android:layout_columnWeight="1"
                    android:layout_row="5"
                    android:layout_column="2"
                    android:gravity="center_horizontal"
                    android:src="@mipmap/a22"
                    android:layout_marginBottom="25dp"/>
                <ImageView
                    android:layout_columnWeight="1"
                    android:layout_row="5"
                    android:layout_column="3"
                    android:gravity="center_horizontal"
                    android:src="@mipmap/a23"
                    android:layout_marginBottom="25dp"/>
                <ImageView
                    android:layout_columnWeight="1"
                    android:layout_row="5"
                    android:layout_column="4"
                    android:gravity="center_horizontal"
                    android:src="@mipmap/a24"
                    android:layout_marginBottom="25dp"/>
            </GridLayout>








        </LinearLayout>
    </ScrollView>

</LinearLayout>
