<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/green">
        <ImageView
            android:id="@+id/wallet_guide_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_guide_white"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wallet_remind_Title_btn"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wallet_oval_loge"
                android:textSize="22sp"
                android:textColor="@color/yellow_wallet"
                android:gravity="center"
                android:background="@mipmap/oval_yellow_wallet"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="23dp"
                android:layout_marginBottom="23dp"
                android:lineSpacingMultiplier="1.3"
                android:textStyle="bold"/>

            <RelativeLayout
                android:id="@+id/wallet_cash_relativelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/round_rectangle_bule"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/wallet_cash_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wallet_cash_text"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginLeft="24dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/wallet_cash_money_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200.00"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_marginRight="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/wallet_deposit_card_relativelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/round_rectangle_pink"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/wallet_deposit_card_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wallet_deposit_card_text"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginLeft="24dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/wallet_deposit_card_money_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="380.00"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_marginRight="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/wallet_blue_card_relativelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/round_rectangle_green"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/wallet_blue_card_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wallet_blue_card_text"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginLeft="24dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/wallet_blue_card_money_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_marginRight="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/wallet_alipay_relativelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/round_rectangle_bule"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/wallet_alipay_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wallet_alipay_text"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginLeft="24dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/wallet_alipay_money_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1211.00"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_marginRight="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/wallet_add_text"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/wallet_add_text"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/blue_wallet"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@mipmap/round_rectangle_grey"/>

        </LinearLayout>
    </ScrollView>



</LinearLayout>
