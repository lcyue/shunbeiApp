<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--标题-->
            <RelativeLayout
                android:id="@+id/menu_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_cyan">

                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:padding="10dp"
                    android:src="@mipmap/ico_aleft" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/menu_remind_charge_accout"
                    android:textColor="@color/white"
                    android:textSize="25sp" />
            </RelativeLayout>

            <!--自定义时间类-->
            <LinearLayout
                android:id="@+id/menu_timepicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="visible"
                android:layout_below="@+id/menu_title"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">

                <TimePicker
                    android:id="@+id/timepicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <!--重复-->
            <LinearLayout
                android:id="@+id/menu_repetition_liner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/menu_timepicker"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/repetition"
                    android:textColor="@color/white_black"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_weekday"
                        android:gravity="center"
                        android:button="@null"
                        android:text="@string/one_character"
                        android:textSize="12sp" />

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_weekday"
                        android:gravity="center"
                        android:button="@null"
                        android:text="二"
                        android:textSize="12sp" />

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_weekday"
                        android:gravity="center"
                        android:button="@null"
                        android:text="三"
                        android:textSize="12sp" />

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_weekday"
                        android:gravity="center"
                        android:button="@null"
                        android:text="四"
                        android:textSize="12sp" />

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_weekday"
                        android:gravity="center"
                        android:button="@null"
                        android:text="五"
                        android:textSize="12sp" />

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_weekday"
                        android:gravity="center"
                        android:button="@null"
                        android:text="六"
                        android:textSize="12sp" />

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_weekday"
                        android:gravity="center"
                        android:button="@null"
                        android:text="日"
                        android:textSize="12sp" />


                </LinearLayout>
                <!--线-->
                <View
                    android:id="@+id/menu_view3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/menu_view" />
            </LinearLayout>
            <!--闹钟-->
            <LinearLayout
                android:id="@+id/menu_menu_alarm_clock_linear"
                android:layout_below="@id/menu_repetition_liner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_alarm_clock"
                    android:textColor="@color/white_black"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/menu_default"
                    android:textColor="@color/black_gery"
                    android:textSize="20sp" />
            </LinearLayout>
            <!--提醒方式-->
            <LinearLayout
                android:id="@+id/menu_menu_remind_way_linear"
                android:layout_below="@id/menu_menu_alarm_clock_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_remind_way"
                    android:textColor="@color/white_black"
                    android:textSize="20sp" />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:button="@null"
                    android:gravity="center"
                    android:drawableRight="@drawable/selector_weekday"
                    android:text="@string/menu_task_show"
                    android:textColor="@color/black_gery"
                    android:textSize="20sp" />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:button="@null"
                    android:gravity="center"
                    android:drawableRight="@drawable/selector_weekday"
                    android:text="@string/menu_tel_shake"
                    android:textColor="@color/black_gery"
                    android:textSize="20sp" />
                <!--线-->
                <View
                    android:id="@+id/menu_view5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/menu_view" />
            </LinearLayout>
            <!--保存-->
            <TextView
                android:id="@+id/saveing_btton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@mipmap/icon_circle_bead_box_green"
                android:gravity="center"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_marginTop="10dp"
                android:layout_alignParentBottom="true" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>